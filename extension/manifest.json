{
  "manifest_version": 3,
  "name": "Bags Creator Context",
  "version": "0.1.0",
  "description": "Context for creators on Bags",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://your-nextjs-app.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bags Creator Context",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
